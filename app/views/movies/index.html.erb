<h1>Rotten Mangoes</h1>
<%= link_to "Submit a movie!", new_movie_path %>

<%= form_tag(movies_path, method: "get") do %>
  <%= label_tag(:title) %>
  <%= text_field_tag(:title, params[:title]) %>  
  <%= label_tag(:director) %>
  <%= text_field_tag(:director, params[:director]) %>
  <%= select_tag(:runtime_in_minutes, options_for_select([['', nil], ['Under 90','<90'], ['Between 90 and 120','90<x<120'], ['Over 120', '>120']]))%>
  <%= submit_tag "Search" , :name => nil %>
<% end %>

<hr>
<% @movies.each do |movie| %>
  <%= link_to image_tag(movie.poster_url(:thumb).to_s), movie_path(movie) %>
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <h3><%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <p><%= movie.description %></p>
  <p>Score: <%= movie.review_average %></p>
  <hr>
<% end %>